{
    "manifest_version": 2,
    "name": "GoodreadsCompareBooks",
    "description": "description",
    "version": "0.1",
    "author": "Petr Kub√°t",
    "browser_action": {
        
        "default_title": "Compare Books"
    },
    "content_scripts": [{
        "js": ["jquery-3.3.1.min.js", "tippy.all.min.js", "alertify.min.js", "background.js"],
        "css": [ "css/alertify.min.css", "css/themes/default.css" ],
        "matches": [ "https://www.goodreads.com/","https://www.goodreads.com/*/*"]
    }],
    "permissions": [
        "activeTab",
        "https://www.goodreads.com/*/*"
    ], 
    "web_accessible_resources": [
        "css/*"
    ]
}